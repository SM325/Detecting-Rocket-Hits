<Window x:Class="MVVM_PL.View.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_PL.View"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        mc:Ignorable="d"
       Title="In Real Time"  Width="1000" VerticalAlignment="Stretch" HorizontalAlignment="Right" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI" ResizeMode="NoResize" WindowStyle="None"  Height="550"  >

    <Grid x:Name="outerGrid" Background="White" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="266*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <Rectangle Height="318" Fill="White" VerticalAlignment="Bottom"  RadiusY="14" RadiusX="14" Grid.Column="1" Grid.Row="1" Margin="0,0,111,29" Grid.ColumnSpan="5">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" BlurRadius="15" Direction="0"  RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>

        <Rectangle Height="232" VerticalAlignment="Top" RadiusX="10" Grid.ColumnSpan="6" Fill="#FF13688D" Grid.RowSpan="2"/>
        <Rectangle Height="318" Fill="White" VerticalAlignment="Bottom"  RadiusY="14" RadiusX="14" Grid.Column="1" Grid.Row="1" Margin="0,0,111,29" Grid.ColumnSpan="5">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" BlurRadius="15" Direction="0"  RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <Rectangle Height="550" VerticalAlignment="Top" RadiusX="10" Grid.ColumnSpan="2" Fill="#FF1F3D68" Grid.RowSpan="3" Grid.Column="4" Margin="302,0,0,0"/>
        <Rectangle Height="175" VerticalAlignment="Top" RadiusX="10" Grid.ColumnSpan="2" Fill="LightGray" Margin="142,35,39,0" Grid.Column="4" Grid.RowSpan="2">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" BlurRadius="15" Direction="0"  RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>

        </Rectangle>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,39,33" Grid.Column="5">
            <materialDesign:PopupBox HorizontalAlignment="Right" Margin="10" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" >
                <StackPanel Width="150">
                    <Button Content="Logout" Click="Logout_Button_Click" />
                    <Button Content="Exit" Click="Exit_Button_Click" />
                </StackPanel>
            </materialDesign:PopupBox>
        </StackPanel>

        <Rectangle Height="318" Fill="White" VerticalAlignment="Bottom"  RadiusY="14" RadiusX="14" Grid.Column="1" Grid.Row="1" Margin="0,0,111,29" Grid.ColumnSpan="5">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" BlurRadius="15" Direction="0"  RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <Rectangle Height="359" Fill="White" VerticalAlignment="Bottom"  RadiusY="14" RadiusX="14" Grid.Column="1" Grid.Row="1" Margin="0,0,111,10" Grid.ColumnSpan="5">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" BlurRadius="15" Direction="0"  RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>






        <Grid x:Name="leftInnerGrid" Grid.Row="1" Grid.Column="1" DataContext="{Binding CurRep}" Grid.ColumnSpan="2" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="109*"/>
                <ColumnDefinition Width="176*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding NameReporter}" Grid.Row="0"  x:Name="nameTextBox" HorizontalAlignment="Left"  FontSize="20" VerticalAlignment="Center"  Background='Transparent' FontStyle="Oblique" Grid.Column="1"  Width="115" Height="27"  BorderBrush="#FF757676"    >
                <TextBox.CacheMode>
                    <BitmapCache/>
                </TextBox.CacheMode>
            </TextBox>
            <Label x:Name="label" Content="name:" HorizontalAlignment="Center"  VerticalAlignment="Center"  Grid.Column="0" Grid.Row="0" FontSize="20"/>
            <Label x:Name="label1" Content="city:" HorizontalAlignment="Center"   VerticalAlignment="Center"  Grid.Row="1" FontSize="20"/>
            <Label x:Name="label2" Content="street:" HorizontalAlignment="Center"  VerticalAlignment="Center"  Grid.Row="2" FontSize="20"/>
            <TextBox x:Name="cityTextBox1" HorizontalAlignment="Left" Height="28" FontSize="20" TextWrapping="Wrap" Text="{Binding City}" VerticalAlignment="Center" Width="115" Background="Transparent" FontStyle="Oblique" Grid.Row="1" Grid.Column="1" BorderBrush="#FF7B7C7D"  />
            <TextBox x:Name="streetTextBox2" HorizontalAlignment="Left" Height="28" FontSize="20" TextWrapping="Wrap" Text="{Binding Address}" VerticalAlignment="Center" Width="115" Background="Transparent" FontStyle="Oblique" Grid.Row="2" Grid.Column="1" BorderBrush="#FF89898B" />

            <Label x:Name="label4"  Content="date:" HorizontalAlignment="Center"  VerticalAlignment="Center"  Grid.Row="3" FontSize="20"/>
            <xctk:DateTimePicker x:Name="dtpStartTime"  
                     Format="Custom" 
                     FormatString=" dd/MM/yyyy HH:mm" 
                      HorizontalAlignment="Left" VerticalAlignment="Center"  Background="Transparent" Value="{Binding DateRep}" Grid.Row="3" Grid.Column="1" Width="145" Height="27" BorderBrush="#FF89898B"  />
        </Grid>



        <Grid x:Name="InnerGrid2"  Width="auto" Grid.Column="4" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="52*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="label2_Copy" Content="booms:" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20"/>
            <Slider x:Name="slider1" Value="{Binding IntensityRepFall}" HorizontalAlignment="Center"  Minimum="1" Width="120" Height="29" VerticalAlignment="Center"  Maximum="10" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" RenderTransformOrigin="1.3,0.607" Grid.Column="1" Grid.Row="1" BorderBrush="#FFEB1948" />
            <Slider x:Name="slider2" Value="{Binding Intensity2RepFall,UpdateSourceTrigger=PropertyChanged}" Visibility="Hidden" HorizontalAlignment="Center"  VerticalAlignment="Center" Maximum="10" Minimum="1" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Width="120" Height="29" Grid.Row="2" Grid.Column="1" />
            <Slider x:Name="slider3" Value="{Binding Intensity3RepFall,UpdateSourceTrigger=PropertyChanged}" Visibility="Hidden"  HorizontalAlignment="Center" Height="29"   VerticalAlignment="Center" Minimum="1" Width="120" Maximum="10" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True"  RenderTransformOrigin="0.55,2.036" Grid.Column="1" Grid.Row="3"/>
            <Label  x:Name="Label1" Content="intensity 1:" HorizontalAlignment="Center"  VerticalAlignment="Center"  Grid.Row="1" FontSize="20" />
            <Label  x:Name="Label2" Visibility="Hidden" Content="intensity 2:"  HorizontalAlignment="Center" FontSize="20"  FontWeight="ExtraBlack"  VerticalAlignment="Center"  Grid.Row="2"/>
            <Label  x:Name="Label3"  Visibility="Hidden" Content="intensity 3:"  HorizontalAlignment="Center" FontSize="20"  FontWeight="ExtraBlack"   VerticalAlignment="Center" Grid.Row="3"/>
            <xctk:IntegerUpDown Name="boomsRepFall" Value="{Binding boomsRepFall}" FontSize="20" RenderTransformOrigin="0.503,0.582"  Background="Transparent" Maximum="3" Minimum="1" HorizontalContentAlignment="Center" TextAlignment="Center" ValueChanged="boomControl_ValueChanged" Grid.Column="1" Height="30" Width="45" BorderBrush="#FF89898B"/>

        </Grid>
        <Button   Command="{Binding MyCom}"  Grid.Column="1"  Content="Add " HorizontalAlignment="Stretch" Style="{x:Null}"   VerticalAlignment="Center" Grid.Row="2" Height="32" FontFamily="Segoe UI"  Background="#FF13688D" Foreground="#FF0A0000" BorderBrush="#FF1F3D68" RenderTransformOrigin="0.39,0.376" FontSize="22" Margin="0,23,136,24" FontStyle="Italic" Grid.ColumnSpan="2"  />
        <TextBlock Grid.ColumnSpan="3" Grid.Column="2" HorizontalAlignment="Center"   TextWrapping="Wrap" Text="Add Report" VerticalAlignment="Center" FontSize="50" Margin="11.784,2,220,10" Width="336" Foreground="#FF0A0000" FontStyle="Italic" TextDecorations="{x:Null}"  />
    </Grid>
</Window>




