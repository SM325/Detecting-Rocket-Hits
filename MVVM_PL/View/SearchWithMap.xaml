<UserControl x:Class="MVVM_PL.View.SearchWithMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_PL.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="outerGrid">
        <local:Map x:Name="map" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800"/>
        <DatePicker x:Name="date"  Foreground="Black" HorizontalAlignment="Left" Height="24" Margin="34,42,0,0" VerticalAlignment="Top" Width="166" SelectedDateChanged="Date_SelectedDateChanged" RenderTransformOrigin="1.623,0.342"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="200" Margin="32,92,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ListView_SelectionChanged">
            <ListView.Background>
                <SolidColorBrush Color="#FFC5D5F0" Opacity="0.7"/>
            </ListView.Background>

        </ListView>


    </Grid>
</UserControl>
